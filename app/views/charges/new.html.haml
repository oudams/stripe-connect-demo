.col-md-4.col-lg-4.col-md-offset-3.col-lg-offset-4
  %input{ id: "pk", type: "hidden", value: connected_account.stripe_publishable_key }

  .text-center
    %h3 Fill out the Payment Form
    %hr
    %label{:for => "card-element"}
      Credit or debit card
    = simple_form_for(:new_charge, url: charges_path, :html => { name: "element_form" }) do |f|
      = f.input(:amount, as: :hidden, input_html: { value: 500 })
      = f.input(:stripe_user_id, as: :hidden, input_html: { value: connected_account.stripe_user_id })
      .form-group
        #card-element
        #card-errors{:role => "alert"}
      %button.btn.btn-primary
        Submit Payment

  %hr

  %h3.text-center Connected Account
  = "acc: #{connected_account.stripe_user_id }"
  %br
  = "sk: #{connected_account.access_token}"
  %br
  = "pk: #{connected_account.stripe_publishable_key}"

= javascript_include_tag "charges"
